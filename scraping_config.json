{
  "proxies": {
    "enabled": true,
    "sources": [
      "env:SCRAPING_PROXIES",
      "file:proxies.txt"
    ]
  },
  "rate_limiting": {
    "min_delay_seconds": 2.0,
    "max_delay_seconds": 5.0,
    "requests_per_hour_per_domain": 100
  },
  "circuit_breaker": {
    "failure_threshold": 5,
    "recovery_timeout_seconds": 300
  },
  "user_agents": {
    "rotation_enabled": true,
    "database_size": 8
  },
  "scrapers": {
    "amazon": {
      "use_cloudscraper": true,
      "timeout_seconds": 30,
      "retry_count": 2
    },
    "aliexpress": {
      "use_cloudscraper": true,
      "timeout_seconds": 30,
      "retry_count": 2
    },
    "mercadolivre": {
      "use_cloudscraper": false,
      "timeout_seconds": 20,
      "retry_count": 2
    }
  }
}
